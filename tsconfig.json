{
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "moduleResolution": "bundler",
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "lib": [
            "ES6",
            "DOM"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}